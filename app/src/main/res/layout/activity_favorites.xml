                            android:scaleType="centerCrop"/>

                    </RelativeLayout>

                    <TextView
                        android:text="Beğendiğiniz gönderi"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#000000"
